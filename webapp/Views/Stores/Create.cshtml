                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body no-padding">


                        <form action="" id="smartform" class="smart-form">
                            @{Html.RenderPartial("~/Views/Stores/_Store.cshtml");}
                            @{Html.RenderPartial("~/Views/shared/_btnSave.cshtml");}
                        </form>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->
        </article>
    </div>

    <!-- end row -->
    <!-- end row -->

</section>
@section pagespecific {


    <script type="text/javascript">
           var saveUrl = '@Url.Action("Create", "Stores")';
        var redirectUrl = '@Url.Action("index", "Stores")';
        function ValidLogicData() {
            return true;

        }
        function ValidateForm() {

            var validator = $("#smartform").validate({

                // Rules for form validation
                rules:
                {

                    ID: {
                        required: true
                    },
                    Name: {
                        required: true
                    }


                },
                messages: {
                    ID: {
                        required: 'الرجاء ادخال قيمه'
                    },
                    Name: {
                        required: 'الرجاء ادخال قيمه'
                    }

                },
                submitHandler: function (form) {
                    $(form).ajaxSubmit({
                        success: function () {
                        }
                    });
                },
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                },
                invalidHandler: function (form, validator) {
                    var errors = validator.numberOfInvalids();
                    if (errors) {
                        validator.errorList[0].element.focus();
                    }
                }
            });


        }

    $(document).ready(function () {
        ValidateForm();
    });
    </script>
}
