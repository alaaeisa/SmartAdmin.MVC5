@model SmartAdminMvc.Models.Item

<fieldset>
    <div class="row">

        <section class="col col-3">
            <label class="label "> كود الصنف  <span style="color:red">&nbsp;*</span></label>
            <label class="input">
                <input type="text" name="ID" id="ID" value="@Model.ID" readonly>
            </label>
        </section>

        <section class="col col-3">
            <label class="label ">اسم الصنف   <span style="color:red">&nbsp;*</span></label>
            <label class="input">
                <input type="text" name="Name" id="Name" value="@Model.Name">
            </label>
        </section>
        <section class="col col-6">
            <label class="label"> التصنيف </label>
            <label class="input">
                @Html.DropDownList("CategoryID", null, "", htmlAttributes: new { @class = "form-control select2 ", @id = "CategoryID", @onchange = "" })
            </label>
        </section>

        <section class="col col-3">
            <label class="label ">  سعر البيع <span style="color:red">&nbsp;*</span></label>
            <label class="input">
                <input type="number" min="0" name="Price" id="Price" value="@Model.Price">
            </label>
        </section>

        <section class="col col-3">
            <label class="label ">  سعر الشراء </label>
            <label class="input">
                <input type="number" min="0" name="PurchasingPrice" id="PurchasingPrice" value="@Model.PurchasingPrice">
            </label>
        </section>

        <section class="col col-6">
            <label class="label"> الموديلات </label>
            <label class="input">
                @Html.DropDownList("CarModelsIDs", null, "", htmlAttributes: new { multiple = "multiple", @class = "form-control select2 ", @id = "CarModelsIDs", @onchange = "" })
            </label>
        </section>
        <section class="col col-9">
            <label class="label ">  ملاحظات  </label>
            <label class="input">
                <input type="text" name="Notes" id="Notes" value="@Model.Notes">
            </label>
        </section>

    </div>

</fieldset>
