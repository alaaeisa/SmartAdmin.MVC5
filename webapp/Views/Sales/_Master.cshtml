@model SmartAdminMvc.Models.InvoiceVM

<fieldset>
 

    <div class="row">

        <section class="col col-3">
            <label class="label ">رقم الفاتورة<span style="color:red">&nbsp;*</span></label>
            <label class="input">
                <input type="text" readonly name="InvoiceNo" id="InvoiceNo" value="@Model.InvoiceNo">
            </label>
        </section>

        <section class="col col-3">
            <label class="label ">تاريخ الفاتورة<span style="color:red">&nbsp;*</span></label>
            <label class="input">
                <input type="text" class="form-control input-append datepicker" name="InvoiceDate" id="InvoiceDate" value="@Model.InvoiceDate" readonly>
            </label>
        </section>



        <section class="col col-6">
          
            <label class="label">  العميل<span style="color:red">&nbsp;*</span></label>
            <label class="input">
                <input type="text" name="Notes" id="Notes" value="@Model.Notes">
                @*@Html.DropDownList("CustomerId", null, "", htmlAttributes: new { @class = "form-control select2", @id = "CustomerId", @onchange = "CheckCustomer();" })*@
            </label>
        </section>


        <section class="col col-6">
            <label class="label ">  ملاحظات </label>
            <label class="input">
                <input type="text" name="Notes" id="Notes" value="@Model.Notes">
            </label>
        </section>



    </div>



</fieldset>
